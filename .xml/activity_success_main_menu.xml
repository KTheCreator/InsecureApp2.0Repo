<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".successMainMenu">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="30dp"
    android:textAlignment="center"
    android:text="Main Menu"
    android:textColor="#000"
    android:textSize="30sp" />

    <Button
        android:id="@+id/fitHistoryViewerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="50dp"
        android:translationY="100dp"
        android:text="Fit Tracker Viewer"
        android:onClick="switchToTracker"
        />
    <Button
        android:id="@+id/fitHistoryDataEntryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="50dp"
        android:translationY="100dp"
        android:text="Add fitness data"
        android:onClick="switchToDataEntry"
        />
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="50dp"
        android:text="Logout"
        android:translationY="100dp"
        android:onClick="logout"
        />
</LinearLayout>